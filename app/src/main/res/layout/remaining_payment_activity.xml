<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/trial2"
    tools:context=".RemainingPayment_activity">

    <TextView
        android:id="@+id/User_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remaining Payment"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <View
        android:id="@+id/payment_view"
        android:layout_width="340dp"
        android:layout_height="450dp"
        android:alpha="0.7"
        android:background="@drawable/event_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/pay_eventt"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/pay_namee"
        app:layout_constraintEnd_toEndOf="@+id/payment_view"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="@+id/payment_view"
        app:layout_constraintTop_toTopOf="@+id/payment_view"
        app:layout_constraintVertical_bias="0.024">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/pay_event"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:hint="Event" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/pay_namee"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/payment_view"
        app:layout_constraintEnd_toEndOf="@+id/payment_view"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="@+id/payment_view"
        app:layout_constraintTop_toBottomOf="@+id/pay_eventt"
        app:layout_constraintVertical_bias="0.072">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/pay_name"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:hint="Name" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/payment_view"
        app:layout_constraintEnd_toEndOf="@+id/payment_view"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="@+id/payment_view"
        app:layout_constraintTop_toBottomOf="@+id/pay_namee"
        app:layout_constraintVertical_bias="0.113"
        android:id="@+id/pay_emaill">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:id="@+id/pay_email"
            android:inputType="textEmailAddress" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/pay_conn"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/payment_view"
        app:layout_constraintEnd_toEndOf="@+id/payment_view"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="@+id/payment_view"
        app:layout_constraintTop_toBottomOf="@+id/pay_emaill"
        app:layout_constraintVertical_bias="0.168">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/pay_con"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:hint="Contact no."
            android:inputType="number" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/pay_amtt"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/payment_view"
        app:layout_constraintEnd_toEndOf="@+id/payment_view"
        app:layout_constraintHorizontal_bias="0.042"
        app:layout_constraintStart_toStartOf="@+id/payment_view"
        app:layout_constraintTop_toBottomOf="@+id/pay_conn"
        app:layout_constraintVertical_bias="0.239">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/pay_amt"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="Paid Amount"
            android:inputType="number" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/pay_balanceamtt"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/payment_view"
        app:layout_constraintEnd_toEndOf="@+id/payment_view"
        app:layout_constraintHorizontal_bias="0.936"
        app:layout_constraintStart_toStartOf="@+id/payment_view"
        app:layout_constraintTop_toBottomOf="@+id/pay_conn"
        app:layout_constraintVertical_bias="0.239">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/pay_balanceamt"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="Balance Amount"
            android:inputType="number" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/payment_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/reg_button"
        android:text="Payment"
        app:layout_constraintBottom_toBottomOf="@+id/payment_view"
        app:layout_constraintEnd_toEndOf="@+id/payment_view"
        app:layout_constraintStart_toStartOf="@+id/payment_view"
        app:layout_constraintTop_toBottomOf="@+id/pay_amtt" />

</androidx.constraintlayout.widget.ConstraintLayout>