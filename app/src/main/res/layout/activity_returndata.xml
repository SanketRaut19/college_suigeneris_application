<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/trial2"
    tools:context=".Returndata_Activity">

    <TextView
        android:id="@+id/User_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Participate Info"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <View
        android:id="@+id/event_view"
        android:layout_width="340dp"
        android:layout_height="450dp"
        android:alpha="0.7"
        android:background="@drawable/event_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Return_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event : "
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/event_view"
        app:layout_constraintEnd_toEndOf="@+id/event_view"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="@+id/event_view"
        app:layout_constraintTop_toTopOf="@+id/event_view"
        app:layout_constraintVertical_bias="0.102" />

    <TextView
        android:id="@+id/Return_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name : "
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/event_view"
        app:layout_constraintEnd_toEndOf="@+id/event_view"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="@+id/event_view"
        app:layout_constraintTop_toBottomOf="@+id/Return_event"
        app:layout_constraintVertical_bias="0.133" />

    <TextView
        android:id="@+id/Return_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email : "
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/event_view"
        app:layout_constraintEnd_toEndOf="@+id/event_view"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="@+id/event_view"
        app:layout_constraintTop_toBottomOf="@+id/Return_name"
        app:layout_constraintVertical_bias="0.156" />

    <TextView
        android:id="@+id/Return_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact No. :"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/event_view"
        app:layout_constraintEnd_toEndOf="@+id/event_view"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="@+id/event_view"
        app:layout_constraintTop_toBottomOf="@+id/Return_email"
        app:layout_constraintVertical_bias="0.2" />

    <TextView
        android:id="@+id/Return_amt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount : "
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/event_view"
        app:layout_constraintEnd_toEndOf="@+id/event_view"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="@+id/event_view"
        app:layout_constraintTop_toBottomOf="@+id/Return_contact"
        app:layout_constraintVertical_bias="0.357" />

    <Button
        android:id="@+id/Return_btn"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:background="@drawable/reg_button"
        android:text="Remaining Amount"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.935" />


</androidx.constraintlayout.widget.ConstraintLayout>